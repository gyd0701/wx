<!--pages/address/insertadd/insertadd.wxml-->
<form bindsubmit="formSubmit" class="container">
  <view class="bg-fff p-lr30 border-t">
    <view class="ipt-wrap border-b flex ai-center">
      <label class="font14">姓名:</label>
      <input name="name" type="text" class="ml40 flex1" maxlength="4" placeholder="请输入真实姓名"></input>
    </view>
 
    <view class="ipt-wrap border-b flex ai-center">
      <label  class="font14">手机号码:</label>
      <input name="mobile" type="text" class="ml40 flex1" maxlength="11" placeholder="请输入手机号码"></input>
    </view>
 
    <view class="ipt-wrap border-b flex ai-center jc-sb">
      <view class="flex ai-center">
        <label class="font14">所在地区</label>
        <picker mode="region" class="ml40 flex1 region" placeholder="省、市、区" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
          <view class="picker flex1 texthide">
            {{region[0]}} {{region[1]}} {{region[2]}}
          </view>
        </picker>
      </view>
      <view class="flex2" wx:if="{{regionFlag}}">
        <text>请选择</text>
        <text class="iconfont icon-youjiantou color-a5a5a5 ml20">></text>
      </view>
    </view>
 
    <view class="ipt-wrap border-b">
      <textarea name="detail" class="textarea _w100 mt30 p_rl40 font14" maxlength="50" placeholder="请输入详细地址，精确到门牌号"></textarea>
    </view>
 
    <view class="ipt-bz border-b">
      <textarea name="remark"  class="textarea _w100 mt30 p-rl40 font14" maxlength="50" placeholder="可在此处填写备注说明"></textarea>
    </view>
  </view>

     <view class=" bg-fff  flex ai-center jc-sb mtp10">
    <view class="flex ai-center">
      <label class="font14">设为默认地址</label>
    </view>
    <view class="flex">
      <switch class="switch" bindchange="defaultChange" color="#279efd"></switch>
    </view>
  </view>


 <button class="combtn-1 font18 color-fff  bg-btn-1" formType="submit">添加</button>
</form>